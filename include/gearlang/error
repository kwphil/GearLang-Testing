#pragma once

#include <bit>
#include <expected>

namespace gearlang 
{
    enum class error 
    {
        OK,
        INVALID_PARAM
    };

    template <class T>
    using result = std::expected<T, error>;

    template <class T>
    constexpr int cerr(error e) 
    {  
        std::bit_cast<int>(e);
    } 
}