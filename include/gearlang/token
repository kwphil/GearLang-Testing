#pragma once

#include <concepts>
#include <utility>
#include "string.h"

typedef std::pair<basic_string,char*> PARSER_TYPE;
#define PARSER(name,impl) (PARSER_TYPE name(char*) impl)
#define PARSE_HEADER(name) (PARSER_TYPE name(char*);)

namespace gearlang {
    enum class Token {
        IDENTIFIER,
    };
}

namespace gearlang::parser {
    extern PARSE_HEADER(identifier);
    extern PARSE_HEADER(number);
    extern PARSE_HEADER(exit);
}